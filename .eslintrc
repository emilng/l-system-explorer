{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "curly": 2,
    "eqeqeq": 2,
    "no-cond-assign": "always",
    "no-shadow": 0,
    "quotes": [1, "single", "avoid-escape"],
    "react/jsx-quotes": [1, "double", "avoid-escape"],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-vars": 1,
    "strict": [2, "never"]
  }
}